
public class UDate {
	private int date=1, month=1, year=2018;
	private static final String sep = "-";
	private static final String[] MONTH_NAMES = {"JANUARY", "FEBRUARY", "MARCH", "APRIL", "MAY", "JUNE", "JULY", "AUGUST", "SEPTEMBER", "OCTOBER", "NOVEMBER", "DECEMBER"};
	public static final int SHORT_DATE = 1;	
	public static final int LONG_DATE = 5;
	public static final int NORMAL_DATE = 3;
	
	private static int dateStyle = NORMAL_DATE;
	
	public UDate(int date, int month, int year){
		
		if(year >= 1970 && year <= 2018){
			this.year = year;
		
			if(month >= 1 && month <=12){
				this.month = month;
				this.date = date>=1 && date<=((month==2)?((year%100==0 && year%400==0)||(year%100!=0 && year%4==0)?29:28):(month <= 7 && month>=1?(month % 2 == 0?30:31):(month >= 8 && month <= 12?(month%2==0?31:30):999)))?date:this.date;				
			}
		}
	}
	
	public void print(){
		
		System.out.println("Date: "+date+sep+month+sep+year);
	}
	
	public String toString(){
		switch(UDate.dateStyle){
		case NORMAL_DATE:
			return date+", "+MONTH_NAMES[month-1].substring(0, 2)+" "+year;
		case LONG_DATE:
			return year+", "+MONTH_NAMES[month-1]+" "+date;
		case SHORT_DATE:
			return date+sep+month+sep+year;
		default:
			return 	date+", "+MONTH_NAMES[month-1].substring(0, 2)+" "+year;
		}
	}
	
	
	
}

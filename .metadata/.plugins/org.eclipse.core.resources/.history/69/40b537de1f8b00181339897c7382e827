
public class UDate {
	private int date=1, month=1, year=2018;
	private static final String sep = "-";
	public UDate(int date, int month, int year){
		
		if(year >= 1970 && year <= 2018){
			this.year = year;
		
			if(month >= 1 && month <=12){
				this.month = month;
				this.date = date>=1 && date<=((month==2)?((year%100==0 && year%400==0)||(year%100!=0 && year%4==0)?29:28):(month <= 7 && month>=1?(month % 2 == 0?30:31):(month >= 8 && month <= 12?(month%2==0?31:30):999)))?date:this.date;				
			}
		}
	}
	
	public void print(){
		
		System.out.println("Date: "+date+sep+month+sep+year);
	}
	
	public String toString(){
		return date+sep+month+sep+year;
	}
	
	
	
}
